/* pages/goods_detail/index.wxss */
page {
 background-color: #f5f5f5;
}

.details {
 padding: 20rpx;
}

.picture swiper {
 height: 60vh;
 text-align: center;
 background-color: #fff;
}

.info {
 color: #333;
 background-color: #fff;
}

.price {
 color: var(--themeColor);
 font-size: 24px;
}

.price text {
 font-size: 20px;
}

.title {
 display: flex;
 justify-content: space-between;
 align-items: center;
 padding: 20rpx 0;

}

.name {
 flex: 7;
 font-size: 16px;
 padding-right: 30rpx;
 border-right: 1px solid #ccc;
}

.star {
 flex: 2;
 display: flex;
 flex-direction: column;
 justify-content: space-around;
 align-items: center;
 color: #999;
}

.infoTitle {
 position: relative;
 font-size: 20px;
 color: var(--themeColor);
 font-weight: 500;
 border-bottom: 2rpx solid #ccc;
 padding: 20rpx 0;
}

.detailsInfo {
 margin-top: 30rpx;
 margin-bottom: 90rpx;
 background-color: #fff;
}

.bottomTool {
 position: fixed;
 bottom: 0;
 left: 0;
 background-color: #fff;
 display: flex;
 justify-content: space-around;
 align-items: center;
 width: 100vw;
 height: 90rpx;
 border-top: 1rpx solid #ccc;
}

.serve,
.cart,
.share {
 position: relative;
 flex: 2;
 font-size: 12px;
 color: #666;
 display: flex;
 flex-direction: column;
 align-items: center;
}

.serve>button,
.share>button {
 position: absolute;
 top: 0;
 left: 0;
 width: 100%;
 height: 100%;
 opacity: 0;
}

.bottomTool .iconfont {
 font-size: 22px;
}

.addCart,
.buyNow {
 flex: 3;
 display: flex;
 align-items: center;
 justify-content: center;
 font-size: 15px;
 color: #fff;
 width: 100%;
 height: 100%;
}

.addCart {
 background-color: #ffb517;
}

.buyNow {
 background-color: #ff2d4a;
}