<!--pages/goods_list/index.wxml-->
<view class="container">
	<!-- 顶部搜索 -->
	<searhInput />
	<!-- tab栏 -->
	<tabs tabs="{{tabs}}" bindtabItemChange="hadletabItemChange">
		<block wx:if="{{tabs[0].isActive}}">
			<view class="sum">
				<navigator wx:for="{{goodList.goods}}" wx:key="index">
					<view class="left">
						<image mode="widthFix" src="{{item.goods_small_logo?item.goods_small_logo:'https://images.pexels.com/photos/1553962/pexels-photo-1553962.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500'}}"></image>
					</view>
					<view class="right">
						<view class="good_name">{{item.goods_name}}</view>
						<view class="good_price"><text>￥</text>{{item.goods_price}}</view>
					</view>
				</navigator>
			</view>
		</block>
		<block wx:elif="{{tabs[1].isActive}}">2</block>
		<block wx:elif="{{tabs[2].isActive}}">3</block>
	</tabs>
</view>