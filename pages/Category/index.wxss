/* pages/Category/index.wxss */
page {
    height: 100%;
}

.category {
    height: 100%;
}

.cate {
    display: flex;
}

.leftcate {
    height: calc(100vh - 90rpx);
    flex: 2;
    background-color: #f5f5f5;
    text-align: center;
}

.menu {
    padding: 20rpx;
    margin: 10rpx 0;
    font-size: 13px;
    color: #666;
}

.active {
    background-color: #fff;
    border-left: 4px solid red;
}

.rightcate {
    flex: 5;
    height: calc(100vh - 90rpx);
    padding: 20rpx 0 30rpx;
    color: #666;
    text-align: center;
    font-size: 14px;
}

.brand {
    display: flex;
    flex-wrap: wrap;
}

.subtitle {
    width: 33.33%;
    padding: 20rpx 0;
}

.subtitle image {
    width: 120rpx;
}